@page "/component"

<Header4 Divider="true">
    通用(Common)
</Header4>
<Grid Span="ColSpan.Five5">
    @foreach (var item in Common)
    {
        <Column>
            <NavLink href="@item.Link">
                @item.Name
            </NavLink>
        </Column>
    }
</Grid>
