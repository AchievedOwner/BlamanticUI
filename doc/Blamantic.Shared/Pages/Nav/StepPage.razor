                    <td></td>
                </Tr>
                <Tr>
                    <td>Description</td>
                    <td>步骤的描述</td>
                    <td>string</td>
                    <td></td>
                </Tr>
                <Tr>
                    <td>IconClass</td>
                    <td>步骤的图标</td>
                    <td>string</td>
                    <td></td>
                </Tr>
                <Tr>
                    <td>IconColor</td>
                    <td>步骤的图标的颜色</td>
                    <td>Color?</td>
                    <td></td>
                </Tr>
                <Tr>
                    <td>Completed</td>
                    <td>完成状态，图标会变为 <Icon IconClass="check" Color="Color.Green" /> 显示</td>
                    <td>bool</td>
                    <td>false</td>
                </Tr>
                <Tr>
                    <td>Active</td>
                    <td>激活状态</td>
                    <td>bool</td>
                    <td>false</td>
                </Tr>
                <Tr>
                    <td>Disabled</td>
                    <td>禁用状态</td>
                    <td>bool</td>
                    <td>false</td>
                </Tr>
            </Content>
        </ParameterTable>
    </Body>
</Pager>