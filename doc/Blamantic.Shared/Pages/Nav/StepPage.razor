            <Content>
                <Tr>
                    <td>Vertical</td>
                    <td>垂直显示</td>
                    <td>bool</td>
                    <td>false</td>
                </Tr>
                <Tr>
                    <td>VerticalRight</td>
                    <td>垂直兼容右侧布局</td>
                    <td>bool</td>
                    <td>false</td>
                </Tr>
                <Tr>
                    <td>Attached</td>
                    <td>吸附功能</td>
                    <td>bool</td>
                    <td>false</td>
                </Tr>
                <Tr>
                    <td>AttachedVertical</td>
                    <td>垂直吸附方向</td>
                    <td>VerticalPosition</td>
                    <td></td>
                </Tr>
                <Tr>
                    <td>Size</td>
                    <td>尺寸</td>
                    <td>Size</td>
                    <td></td>
                </Tr>
                <Tr>
                    <td>Inverted</td>
                    <td>反色兼容</td>
                    <td>bool</td>
                    <td>false</td>
                </Tr>
                <Tr>
                    <td>ClickToActive</td>
                    <td>点击激活</td>
                    <td>bool</td>
                    <td>false</td>
