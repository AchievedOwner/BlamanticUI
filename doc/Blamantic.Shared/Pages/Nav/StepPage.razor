@page "/component/nav/steps" 

<Pager DataSource="@(new List<string>
                     {
                         "示例","垂直显示","点击切换","流式布局","尺寸","反色兼容","Steps 组件参数","Step 组件参数"
                     })">
    <Body>
        <Header1>
            步骤引导
            <SubHeader>
                步骤显示一系列活动中某个活动的完成状态
            </SubHeader>
        </Header1>

        <PresentationPart Title="示例">
            <Description>
                使用 <code>Steps</code> 组件作为步骤容器，使用 <code>Step</code> 组件作为每一个步骤。
            </Description>
            <RunTemplate>
                <Steps>
                    <Step Completed IconClass="registered" Title="注册" Description="注册一个新账号" />
                    <Step Actived IconClass="envelope" Title="验证" Description="验证你的邮箱" />
                    <Step Disabled IconClass="check" Title="成功" Description="注册完成！" />
                </Steps>
            </RunTemplate>
            <CodeTemplate>
                @Code.GetCode(@"
```html
<Steps>
    <Step Completed IconClass=""registered"" Title=""注册"" Description=""注册一个新账号"" />
    <Step Actived IconClass=""envelope"" Title=""验证"" Description=""验证你的邮箱"" />
    <Step Disabled IconClass=""check"" Title=""成功"" Description=""注册完成！"" />
</Steps>
```
")
            </CodeTemplate>
        </PresentationPart>
        <PresentationPart Title="垂直显示">
            <Description>
                设置 <code>Vertical</code> 可以垂直显示，默认左侧显示，设置 <code>VerticalRight</code> 切换到右侧显示。
            </Description>
            <RunTemplate>
                <Steps Vertical>
                    <Step Completed IconClass="registered" Title="注册" Description="注册一个新账号" />
                    <Step Actived IconClass="envelope" Title="验证" Description="验证你的邮箱" />
                    <Step Disabled IconClass="check" Title="成功" Description="注册完成！" />
                </Steps>
                &nbsp;&nbsp;&nbsp;&nbsp;
                <Steps Vertical VerticalRight>
                    <Step Completed IconClass="registered" Title="注册" Description="注册一个新账号" />
                    <Step Actived IconClass="envelope" Title="验证" Description="验证你的邮箱" />
                    <Step Disabled IconClass="check" Title="成功" Description="注册完成！" />
                </Steps>
            </RunTemplate>
            <CodeTemplate>
                @Code.GetCode(@"
```html
<Steps Vertical>
    <Step Completed IconClass=""registered"" Title=""注册"" Description=""注册一个新账号"" />
    <Step Actived IconClass=""envelope"" Title=""验证"" Description=""验证你的邮箱"" />
    <Step Disabled IconClass=""check"" Title=""成功"" Description=""注册完成！"" />
</Steps>

<Steps Vertical VerticalRight>
    <Step Completed IconClass=""registered"" Title=""注册"" Description=""注册一个新账号"" />
    <Step Actived IconClass=""envelope"" Title=""验证"" Description=""验证你的邮箱"" />
    <Step Disabled IconClass=""check"" Title=""成功"" Description=""注册完成！"" />
</Steps>
```
")
            </CodeTemplate>
        </PresentationPart>
        <PresentationPart Title="点击切换">
            <Description>
                设置 <code>ClickToActive</code> 开启点击激活步骤背景。
            </Description>
            <RunTemplate>
                <Steps ClickToActive>
                    <Step Title="选择题" />
                    <Step Title="多选题" />
                    <Step Title="问答题" />
                    <Step Title="理解问答" />
                    <Step Title="写作" />
                </Steps>
            </RunTemplate>
            <CodeTemplate>
                @Code.GetCode(@"
```html
<Steps ClickToActive>
    <Step Title=""选择题"" />
    <Step Title=""多选题"" />
    <Step Title=""问答题"" />
    <Step Title=""理解问答"" />
    <Step Title=""写作"" />
</Steps>
```
")
            </CodeTemplate>
        </PresentationPart>
        <PresentationPart Title="流式布局">
            <Description>
                设置 <code>Fluid</code> 可以撑满整个父元素的宽度。
            </Description>
            <RunTemplate>
                <Steps Fluid>
