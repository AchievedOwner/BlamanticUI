        <PresentationPart Title="Hidden">
            <Description>
                A hidden divider divides content without creating a dividing line
            </Description>
            <RunTemplate>
                <Header3>Section One</Header3>
                <ParagraphDemo />
                <Divider Hidden />
                <Header3>Section Two</Header3>
                <ParagraphDemo />
            </RunTemplate>
            <CodeTemplate>
        @Code.GetCode(@"
```html
<Header3>Section One</Header3>
<ParagraphDemo />
<Divider Hidden />
<Header3>Section Two</Header3>
<ParagraphDemo />
```
")
            </CodeTemplate>
        </PresentationPart>

        <PresentationPart Title="Section">
            <Description>
                A divider can provide greater margins to divide sections of content
            </Description>
            <RunTemplate>
                <Header3>Section One</Header3>
                <ParagraphDemo />
                <Divider Section />
                <Header3>Section Two</Header3>
                <ParagraphDemo />
            </RunTemplate>
            <CodeTemplate>
        @Code.GetCode(@"
```html
<Header3>Section One</Header3>
<ParagraphDemo />
<Divider Section />
<Header3>Section Two</Header3>
