        <PresentationPart Title="Demo" Id="grid">
            <Description>
                All grid systems choose an arbitrary 16 columns count to allow per row.
            </Description>
            <RunTemplate>
                <Grid>
                    <Column Color="Color.Grey">...</Column>
                    <Column Color="Color.Olive">...</Column>
                    <Column Color="Color.Grey">...</Column>
                    <Column Color="Color.Olive">...</Column>
                    <Column Color="Color.Grey">...</Column>
                    <Column Color="Color.Olive">...</Column>
                    <Column Color="Color.Grey">...</Column>
                    <Column Color="Color.Olive">...</Column>
                    <Column Color="Color.Grey">...</Column>
                    <Column Color="Color.Olive">...</Column>
                    <Column Color="Color.Grey">...</Column>
                    <Column Color="Color.Olive">...</Column>
                    <Column Color="Color.Grey">...</Column>
                    <Column Color="Color.Olive">...</Column>
                    <Column Color="Color.Grey">...</Column>
                    <Column Color="Color.Olive">...</Column>
                </Grid>
            </RunTemplate>
