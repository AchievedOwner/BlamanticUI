<PresentationPart Title="图片组">
    <SubTitle>
        一组图像可以格式化为具有相同的大小。
    </SubTitle>
    <Description>
        <code>&lt;ImageGroup></code> 作为图片组的容器组件，可以嵌套无数个 <code>&lt;Image></code> 组件。        
    </Description>
    <RunTemplate>
        <ImageGroup Size="Size.Tiny">
            <Image Source="/img/image.png" />
            <Image Source="/img/image.png" />
            <Image Source="/img/image.png" />
            <Image Source="/img/image.png" />
        </ImageGroup>

        <ImageGroup Size="Size.Small">
            <Image Source="/img/image.png" />
            <Image Source="/img/image.png" />
            <Image Source="/img/image.png" />
            <Image Source="/img/image.png" />
        </ImageGroup>
    </RunTemplate>
    <CodeTemplate>
        @Code.GetCode(@"
```html
<ImageGroup Size=""Size.Tiny"">
    <Image Source=""/img/image.png"" />
    <Image Source=""/img/image.png"" />
    <Image Source=""/img/image.png"" />
    <Image Source=""/img/image.png"" />
</ImageGroup>
<ImageGroup Size=""Size.Small"">
    <Image Source=""/img/image.png"" />
    <Image Source=""/img/image.png"" />
    <Image Source=""/img/image.png"" />
    <Image Source=""/img/image.png"" />
</ImageGroup>
```
")
    </CodeTemplate>
</PresentationPart>        
        <ParameterTable>
            <Content>
                <tr>
                    <td>Source</td>
