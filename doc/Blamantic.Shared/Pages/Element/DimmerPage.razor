                        <ParagraphDemo />
                    </Segment>
                    <br />
                    <Labeled Button="true">
                        <Button @onclick="()=>refSample2.Active()">显示遮罩层</Button>
                        <Button @onclick="()=>refSample2.Active(false)">关闭遮罩层</Button>
                    </Labeled>
                </RunTemplate>
                <CodeTemplate>
                    @Code.GetCode(@"
```html
