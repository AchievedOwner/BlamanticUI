
<Header4 id="@Title">
    <a href="javascript:hash('@(Title)')">
        @Title
    </a>
</Header4>
<p>
    @Description
</p>
<Table>
    <Header>
        <TableRow>
            <TableCell Header>Name</TableCell>
            <TableCell Header>Description</TableCell>
        </TableRow>
    </Header>
    <Body>
        @Content
    </Body>
</Table>

@code{
    [Parameter] public string Title { get; set; } = "Methods";
    [Parameter] public RenderFragment Description { get; set; }
    [Parameter] public RenderFragment Content { get; set; }
}