
<Header4 id="@Title">
    <a href="javascript:hash('@(Title)')">
        @Title
    </a>
</Header4>
<p>
    @Description
</p>
<Table>
    <Header>
        <Tr>
            <Th>Name</Th>
            <Th>Description</Th>
            <Th>Callback</Th>
        </Tr>
    </Header>
    <Body>
        @Content
    </Body>
</Table>

@code{
    [Parameter] public string Title { get; set; } = "Events";
    [Parameter] public RenderFragment Description { get; set; }
    [Parameter] public RenderFragment Content { get; set; }
}